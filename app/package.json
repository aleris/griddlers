{
  "name": "griddlers",
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "yarn": ">=1.22"
  },
  "dependencies": {
    "localforage": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^5.3.4",
    "web-vitals": "^1.1.2"
  },
  "devDependencies": {
    "@types/node": "^18.19.15",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.2.1",
    "node-sass": "^9.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^15.2.2",
    "prettier": "^2.8.8",
    "vite": "^5.1.1",
    "vite-tsconfig-paths": "^4.3.1",
    "sass": "^1.69.7",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,json,scss,md}\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,scss,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
